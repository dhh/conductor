<h1>New resource</h1>

<p>
  Stubs out a new resource including an empty model and controller suitable
  for a restful, resource-oriented application. 
</p>

<%= form_for(:resource, :url => resources_path) do |form| %>
  <p>
    <%= form.label :name, "Name <small>(singular, ex: Post, Person, Product)</small>".html_safe %><br />
    <%= form.text_field :name %>
  </p>

  <h1>Fields</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Type</th>
    </tr>

    <% 5.times do |i| %>
      <tr>
        <td><%= text_field_tag "resource[fields][][name]" %></td>
        <td><%= select_tag "resource[fields][][type]", options_for_select(Conductor::BaseGeneratorForm::DATA_TYPES) %></td>
      </tr>
    <% end %>
  </table>


  <h1>Options</h1>

  <p>
    
  </p>

    <%= form.check_box :skip_namespace %> Skip namespace<br />
    <%= form.check_box :skip_indexes %> Skip indexes<br />
    <%= form.check_box :skip_fixture %> Skip fixture<br />
    <%= form.check_box :skip_helper %> Skip helper<br />
    <%= form.check_box :skip_assets %> Skip assets<br />
    <%= form.check_box :skip_timestamps %> Skip timestamps<br />
    <%= form.check_box :skip_migration %> Skip migration

  <p>
    <%= form.submit "Create resource" %>
  </p>
<% end %>
