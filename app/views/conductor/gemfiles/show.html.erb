<h1>Manage Gemfile</h3>
<%= form_for(:gemfile, url: gemfile_path, method: :patch) do |f| %>
  <p>
    <div id="editor"></div>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Save Gemfile" %>
  </p>
<% end %>

<%= content_for :scripts do %>
  <%= javascript_include_tag "conductor/editor" %>
  <%= javascript_include_tag "conductor/gemfiles" %>
<% end %>
